.swiper-item{
    display: block;
	width:750rpx;
    height: 273.5rpx;
}

.widgets-img{
	width: 40rpx;
	height: 40rpx;
}

.widgets-title{
	color: #888888;
    font-size: 1px;
}

.big-logo{
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-around;
}

.logoinfo{
	display: flex;
	flex-direction: column;
	align-items: center;
	width:160rpx; 
	height: 150rpx; 
	margin-top:20rpx;
}

.logotext{
	color: #aaa;
	font-size: 22rpx;
	line-height: 65rpx;
}

.page-margin{
	margin-left: 10rpx;
	margin-right: 10rpx;
	margin-top: 10rpx;
}

.page-row{
	display: flex;
	flex-direction: row;
	align-items: center;
}

.page-column{
	display: flex;
	flex-direction: column;
	align-items: center;
}

.draw__line{
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 2rpx;
    background-color: #F0F0F0;
}